<idea-plugin>
    <id>com.warley.crud-ninja</id>
    <name>Crud Ninja</name>
    <vendor email="warleyvods@gmail.com">Warley Vinicius</vendor>

    <description><![CDATA[
    The fastest way to create a CRUD from entity!<br>
    Spring Only*<br>

    <p>
        Right-click on entity and click "Create a Crud" to generate:
        <li>Repository</li>
        <li>Service</li>
        <li>DTO's (Requests and Responses)</li>
        <li>Mapper (With MapStruct)</li>
        <li>Controller</li>
        </ul>
    </p>
    <p>
        Dependencies:
        <ul>
            <li>Spring Boot</li>
            <li>Mapstruct 1.4 or > </li>
        </ul>
    </p>

    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
    <change-notes>
        <![CDATA[
           1.0.0 Initial release
        ]]>
    </change-notes>

    <actions>
        <action id="codeCrudGenerator" class="GenerateCrud" text="Generate Crud">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WeighingNewGroup"/>
        </action>
    </actions>
</idea-plugin>
