<idea-plugin>
    <id>com.warley.crud-ninja</id>
    <name>Crud Ninja</name>
    <vendor email="warleyvods@gmail.com" url="http://www.warleyvods.com">Warley Vinicius</vendor>

    <description><![CDATA[
    The fastest way to develop an entity based CRUD.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="codeCrudGenerator" class="GenerateCrud" text="Generator CRUD">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WeighingNewGroup"/>
        </action>
    </actions>
</idea-plugin>
